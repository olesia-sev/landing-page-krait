                        nav.nav.header__menu
                            -
                                var navItems = [
                                {
                                    title: 'Home',
                                    href: '#',
                                    text: 'Home'
                                },
                                {
                                    title: 'Features',
                                    href: '#features',
                                    text: 'Features'
                                },
                                {
                                    title: 'Pricing',
                                    href: '#price',
                                    text: 'Pricing'
                                }
                                ]
                            for item in navItems
                                a(href= item.href title= item.title).header__link.js-header-link
                                    | #{item.text}
                            a(href='#download').btn.header__btn.js-btn-download Download Now
