                        {
                            title: 'Enterprise',
                            price: '999.0',
                            arrOptions: ['Unlimited User', 'Multiple Access', 'SMS Support', '24/7 Online Support']
                        }
                        ]
                    for i in prices
                        .price
                            .price__title #{i.title}
                            .price__sum <sup>$</sup> #{i.price} <sub>/m</sub>
                            .price__info
                                include ../common/triangles
                                .price__options
                                    each item in i.arrOptions
                                        div.price__options-item= item
                            .price__text Start Free Trial
                            a(href="#").btn.btn_border Buy now
        section.section.video
            .video__container
                .video__overlay.js-video-overlay
                video(width="100%" height="400" poster="assets/images/video.jpg" muted)#video.video__film.js-video-film
                    source(src="assets/video/SampleVideo.mp4" type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')
